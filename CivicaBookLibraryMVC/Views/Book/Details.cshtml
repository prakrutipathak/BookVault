@using CivicaBookLibraryMVC.ViewModels
@model BooksViewModel

@{
    ViewBag.Title = "Book Details";
}


<div class="container">
    <div class="row justify-content-center mt-4">
        <div class="col-lg-8">
            <div class="card custom-card">
                <h5 class="card-header text-center"><b>@Model.Title</b></h5>

                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <strong>Author:</strong>
                        </div>
                        <div class="col-md-6">
                            @Model.Author
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <strong>Total Quantity:</strong>
                        </div>
                        <div class="col-md-6">
                            @Model.TotalQuantity
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <strong>Available Quantity:</strong>
                        </div>
                        <div class="col-md-6">
                            @Model.AvailableQuantity
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <strong>Issued Quantity:</strong>
                        </div>
                        <div class="col-md-6">
                           @Model.IssuedQuantity
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <strong>Price per Book:</strong>
                        </div>
                        <div class="col-md-6">
                            $@Model.PricePerBook
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <br />
    <div class="text-center">
        <a *ngIf="isAuthenticated" class="btn btn-outline-info m-1" href="@Url.Action("Edit", "Book", new { id = Model.BookId })">
            <i class="fas fa-edit"></i> <b>Edit</b>
        </a>
        <button class="btn btn-outline-danger m-1" onclick="deleteBook('@Model.BookId')">
            <i class="fas fa-trash-alt"></i> Delete
        </button>
        <a class="btn btn-outline-secondary m-1" asp-action="Index"><b>Back to List</b></a>
    </div>
</div>

<script>
    function deleteBook(bookId) {
        if (confirm("Are you sure you want to delete this book?")) {
            $.ajax({
                url: '@Url.Action("Delete", "Book")',
                type: 'POST',
                data: { id: bookId },
                success: function (result) {
                    window.location.href = '@Url.Action("Index", "Book")';
                },
                error: function (xhr, status, error) {
                    alert("An error occurred while deleting the book.");
                    console.error(xhr.responseText);
                }
            });
        }
    }
</script>
<style>
    .card {
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        width: 500px;
        margin-top: 90px;
        margin-left: 100px;
        font-family: sans-serif;
    }

    .card-body {
        padding: 20px;
    }

    .btn {
        font-size: 14px;
    }

    .btn-outline-info {
        color: #17a2b8;
        border-color: #17a2b8;
    }

        .btn-outline-info:hover {
            background-color: #17a2b8;
            color: white;
        }

    .btn-outline-danger {
        color: #dc3545;
        border-color: #dc3545;
    }

        .btn-outline-danger:hover {
            background-color: #dc3545;
            color: white;
        }

    .btn-outline-secondary {
        color: #6c757d;
        border-color: #6c757d;
    }

        .btn-outline-secondary:hover {
            background-color: #6c757d;
            color: white;
        }

    .card-body .row {
        margin-bottom: 10px;
        margin-left: 50px;
    }


    .card-header {
        background-color: #17a2b8;
        color: white;
    }
</style>