@if (User.Identity.IsAuthenticated)
{
    var isAdmin = User.FindFirst("Admin").Value;

    @if (isAdmin == "True")
    {

        <li class="nav-item">
            <a class="nav-link text-white" asp-action="Index" asp-controller="Book"> Manage Books</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-white" asp-action="Index" asp-controller="Auth"> Manage Users</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-white" asp-controller="Report" asp-action="AdminReport"> Book Report</a>
        </li>
    }
    else
    {

        <li class="nav-item">
            <a class="nav-link text-white" asp-area="" asp-controller="Report" asp-action="ShowUserbookReport">Book Report</a>
        </li>

    }

}